# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
# Set default charset
charset = utf-8

[*.py]
profile = black
max_line_length = 96

[*.{txt,md}]
max_line_length = 80

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
